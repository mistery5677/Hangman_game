# Nome do execut치vel final
TARGET = forca

# Compilador
CXX = c++

# Flags do compilador
CXXFLAGS = -Wall -Wextra -std=c++11

# Lista de arquivos fonte (pega todos os .cpp do diret칩rio atual)
SRC = $(wildcard *.cpp)

# Gera os arquivos objeto (.o) a partir dos arquivos fonte
OBJ = $(SRC:.cpp=.o)

# Regra principal: cria o execut치vel
$(TARGET): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Regra para compilar arquivos .cpp em .o
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Limpa arquivos objeto e execut치vel
clean:
	rm -f $(OBJ) $(TARGET)

# Evita que 'clean' seja interpretado como um arquivo real
.PHONY: clean
